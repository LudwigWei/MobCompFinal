<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/analytics_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="50dp"
    >

    <!-- Scrollable content starts here -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <!-- Heading for the section -->
        <TextView
            android:id="@+id/analytics_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/leaguespartan_bold"
            android:paddingLeft="25dp"
            android:text="IoT Analytics"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.015" />

        <!-- Detailed description explaining IoT Analytics -->
        <TextView
            android:id="@+id/analytics_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/leaguespartan_regular"
            android:text="IoT Analytics involves the process of collecting, analyzing, and interpreting the massive amounts of data generated by IoT devices to extract valuable insights. These insights can help organizations make data-driven decisions, optimize operations, and predict future trends. In today's fast-paced business environment, IoT analytics is essential for staying competitive, as it can provide real-time visibility into processes, improve customer experiences, and help in strategic planning."
            android:textAlignment="center"
            android:textColor="#c4a372"
            android:textSize="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/analytics_heading"
            app:layout_constraintVertical_bias="0.026" />

        <!-- Additional section introducing IoT Analytics use cases -->
        <TextView
            android:id="@+id/analytics_features_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/leaguespartan_bold"
            android:paddingStart="20dp"
            android:text="Key Benefits of IoT Analytics"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/analytics_description"
            app:layout_constraintVertical_bias="0.041" />

        <!-- Expanded list of key benefits -->
        <TextView
            android:id="@+id/analytics_features_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/leaguespartan_regular"
            android:text="1. Real-time Insights: Analyze device performance, track usage patterns, and monitor operational metrics as they happen, enabling businesses to take immediate action.\n\n2. Predictive Maintenance: By identifying potential issues before they cause disruptions, IoT Analytics helps companies to reduce downtime and maintenance costs, ensuring optimal performance of machinery and systems.\n\n3. Enhanced Decision-Making: Leverage actionable data from IoT devices to guide business strategy, improve customer experience, and create targeted marketing campaigns that are based on real insights.\n\n4. Improved Efficiency: By using IoT Analytics to track and optimize resources and processes, businesses can improve operational efficiency, reduce waste, and make smarter decisions based on real-time data."
            android:textAlignment="center"
            android:textColor="#c4a372"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/analytics_features_heading"
            app:layout_constraintVertical_bias="0.053" />

        <!-- Heading for IoT Analytics use cases -->
        <TextView
            android:id="@+id/analytics_use_cases_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/leaguespartan_bold"
            android:text="IoT Analytics Use Cases"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/analytics_features_list"
            app:layout_constraintVertical_bias="0.028" />

        <!-- Expanded list of IoT Analytics use cases -->
        <TextView
            android:id="@+id/analytics_use_cases_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/leaguespartan_regular"
            android:text="1. Smart Cities: Use IoT Analytics to monitor and optimize traffic flow, waste management, public transportation, and energy consumption in urban areas, leading to smarter, more sustainable cities.\n\n2. Healthcare: By analyzing patient data from wearables, IoT Analytics can help predict medical events, improve patient outcomes, and reduce hospital readmissions through early detection and personalized care.\n\n3. Manufacturing: Track the health of machinery, monitor the production process in real-time, optimize supply chain operations, and improve product quality with IoT Analytics, enhancing the efficiency of manufacturing operations.\n\n4. Agriculture: Analyze data from soil sensors, weather stations, and irrigation systems to optimize water usage, predict crop yields, and improve farming techniques, leading to sustainable agriculture and higher productivity."
            android:textAlignment="center"
            android:textColor="#c4a372"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/analytics_use_cases_heading"
            app:layout_constraintVertical_bias="0.1" />

        <!-- Conclusion section with a call to action -->
        <TextView
            android:id="@+id/analytics_conclusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/leaguespartan_bold"
            android:text="Embrace the Future of IoT Analytics"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/analytics_use_cases_list"
            app:layout_constraintVertical_bias="0.178" />

        <!-- Conclusion description -->
        <TextView
            android:id="@+id/analytics_conclusion_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/leaguespartan_regular"
            android:text="By harnessing the power of IoT Analytics, businesses can unlock new opportunities, improve operational performance, and make better, more informed decisions. Embrace IoT Analytics to stay ahead in an increasingly connected and data-driven world."
            android:textAlignment="center"
            android:textColor="#c4a372"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/analytics_conclusion"
            app:layout_constraintVertical_bias="0.315" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Scrollable content ends here -->

</androidx.core.widget.NestedScrollView>
